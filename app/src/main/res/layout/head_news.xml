<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/color_header">

    <ImageButton
        android:id="@+id/announcement"
        android:layout_alignParentLeft="true"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        android:src="@drawable/content_home_announcement"/>

    <com.jiketuandui.antinetfraud.View.CFontTitleTextView
        android:id="@+id/main_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:typeface="monospace"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/header_titile"
        android:textColor="@color/color_header_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:shadowColor="@color/color_header_title_shadow"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="10"/>

    <ImageButton
        android:id="@+id/gotoSearch"
        android:layout_alignParentRight="true"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        android:src="@drawable/content_search_selector"/>

</RelativeLayout>
