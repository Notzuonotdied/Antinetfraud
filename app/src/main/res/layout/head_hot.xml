<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/color_header"
    android:orientation="horizontal"
    android:paddingLeft="8dp">

    <com.jiketuandui.antinetfraud.View.CFontTitleTextView
        android:id="@+id/main_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:shadowColor="@color/color_header_title_shadow"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="10"
        android:text="@string/hot_title"
        android:textColor="@color/color_header_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>
