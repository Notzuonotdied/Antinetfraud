<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.jiketuandui.antinetfraud.Activity.UserActivity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/title_color"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/arrow_left"
                android:contentDescription="@string/login"
                android:foregroundGravity="center" />
        </FrameLayout>

        <com.jiketuandui.antinetfraud.View.CFontTitleTextView
            style="@style/CFontTitleTextViewStyle"
            android:text="@string/login" />

    </LinearLayout>

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@mipmap/bg"
        android:gravity="center_vertical"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/head_image"
        fresco:roundedCornerRadius="55dp"
        fresco:roundingBorderColor="@color/color_background"
        fresco:roundingBorderWidth="3dp" />

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/input_bg"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/filter_vcode"
                android:drawableLeft="@mipmap/login_icon_account"
                android:drawablePadding="8dp"
                android:hint="@string/prompt_account"
                android:inputType="textPhonetic"
                android:paddingLeft="15dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="8dp"
                android:hint="@string/prompt_password"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:paddingLeft="15dp" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_header_title"
            android:gravity="center"
            android:text="@string/action_sign_in"
            android:textColor="@color/color_background" />

        <Button
            android:id="@+id/register_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/color_background"
            android:gravity="center"
            android:text="@string/action_register"
            android:textColor="@color/color_header_title" />

    </LinearLayout>
</LinearLayout>
