<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x46"
    android:background="@color/color_bottom"
    android:gravity="center"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/content_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <com.jiketuandui.antinetfraud.View.CFontRadioButton
            android:id="@+id/id_bottom_home"
            style="@style/bottom_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/content_home_selector"
            android:text="@string/main_tab" />

        <com.jiketuandui.antinetfraud.View.CFontRadioButton
            android:id="@+id/id_bottom_hot"
            style="@style/bottom_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/content_hot_selector"
            android:text="@string/main_hot" />

        <com.jiketuandui.antinetfraud.View.CFontRadioButton
            android:id="@+id/id_bottom_Search"
            style="@style/bottom_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/content_classic_selector"
            android:text="@string/main_classical" />

        <com.jiketuandui.antinetfraud.View.CFontRadioButton
            android:id="@+id/id_bottom_my"
            style="@style/bottom_text_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/content_my_selector"
            android:text="@string/main_my" />
    </RadioGroup>


</LinearLayout>
