<?xml version="1" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <include layout="@layout/head_setting"/>

    <!--嵌套ScrollView实现滚动-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/setting_padding">

            <TextView
                style="@style/setting_header"
                android:text="@string/setting_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/setting_pieces_account"
                        style="@style/setting_row">

                        <TextView
                            style="@style/setting_item"
                            android:text="@string/setting_person_account" />

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/lc_holder_image"
                            android:layout_width="@dimen/x46"
                            android:layout_height="@dimen/x46"
                            android:layout_marginRight="@dimen/x10"
                            android:background="@color/color_white"
                            fresco:fadeDuration="100"
                            fresco:placeholderImage="@mipmap/account"
                            fresco:roundWithOverlayColor="@color/color_white"
                            fresco:roundedCornerRadius="23dp"
                            fresco:roundingBorderColor="@color/color_header"
                            fresco:roundingBorderWidth="2dp" />

                        <ImageView style="@style/setting_right_image" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/setting_pieces_collection"
                        style="@style/setting_item_single"
                        android:text="@string/setting_person_collection" />

                    <TextView
                        android:id="@+id/setting_pieces_history"
                        style="@style/setting_item_single"
                        android:text="@string/setting_person_browsing" />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/x28" />
            
            <TextView
                style="@style/setting_header"
                android:text="@string/setting_comment" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_shape"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/setting_pieces_setting"
                    style="@style/setting_item_single"
                    android:text="@string/setting_comment_setting" />

                <LinearLayout
                    android:id="@+id/setting_pieces_delete"
                    android:visibility="gone"
                    style="@style/setting_row">

                    <TextView
                        style="@style/setting_item"
                        android:text="@string/setting_comment_delete" />

                    <TextView
                        android:id="@+id/setting_cache_size"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingRight="20dp"
                        android:text="@string/setting_comment_Cache_size"
                        android:textColor="@color/color_content"
                        android:textSize="14sp" />

                    <ImageView style="@style/setting_right_image" />
                </LinearLayout>

                <TextView
                    android:id="@+id/setting_pieces_idea"
                    style="@style/setting_item_single"
                    android:text="@string/setting_comment_idea" />

                <TextView
                    android:id="@+id/setting_share"
                    style="@style/setting_item_single"
                    android:text="@string/setting_comment_share" />

                <TextView
                    android:id="@+id/setting_pieces_update"
                    style="@style/setting_item_single"
                    android:text="@string/setting_comment_update" />

                <TextView
                    android:id="@+id/setting_pieces_about"
                    style="@style/setting_item_single"
                    android:text="@string/setting_comment_about" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>