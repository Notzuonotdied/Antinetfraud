        <!--<item name="android:layout_marginRight">@dimen/listContent_margin</item>-->
        <!--<item name="android:padding">@dimen/listContent_padding</item>-->
    <!--</style>-->

    <style name="listContent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <!--<item name="android:background">@drawable/list_cencont_shape</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/listContent_margin</item>
        <item name="android:layout_marginBottom">@dimen/listContent_margin</item>
        <item name="android:layout_marginRight">@dimen/listContent_margin</item>
        <item name="android:padding">@dimen/listContent_padding</item>
    </style>


    <style name="setting_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/color_setting_header</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="search_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/color_setting_header</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="setting_item">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="search_item">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_setting_items</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="setting_right_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:src">@mipmap/ic_arrow</item>
    </style>

    <style name="setting_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="search_row">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="setting_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@mipmap/ic_arrow</item>
    </style>

</resources>
